.demo-container {
  position: relative;
  z-index: 2;
  width: 100%;
  max-width: $container-max-width;
  margin: 0 auto;
  padding: $space-medium;
}

.demo-header {
  fixed(left top right)
  inner-space($space-xxsmall);
  z-index: 1000;
  flex();
  align-items: center;
  background: $dark;
  color: $light;

  &__menu {
    color: $light;
  }

  &__title {
    margin: 0;
    font-weight: bold;
    type-scale(large)
  }

  &__title__link {
    inline-block();
    relative();
    color: $light;
    font-weight: bold;
    text-decoration: none;

    &:hover {
      color: rgba($light, 0.6);
    }

    &.active::after {
      block(100%, 2px);
      absolute(left bottom);
      background: $light;
    }
  }
}

.demo-side-nav {
  fixed(left top 56px bottom);
  box(240px, 100%);
  inner-space($space-xxsmall 0)
  bg($gray-dark);
  color: $light;
  z-index: 1001;

  display: none;

  &.visible {
    display: block;
  }
}

.demo-side-nav__link {
  block();
  inner-space($space-xxxsmall $space-small);
  color: inherit;
  text-decoration: none;
}

.demo-content {
  box(cover);
  debug-baseline(rgba($gray, 0.2));
  min-height: 100vh;

  h2 {
    padding-bottom: ($space-xxsmall - 1px);
    border-bottom: 1px solid $gray;
  }
}

.demo-title {
  margin: 0 0 $space-large;
  border: 0px solid $gray-dark;
  border-bottom-width: 2px;
  padding-bottom: s('calc(%s - %s)', $space-medium, @border-bottom-width);
}

.demo-content__container {
  padding: ($space-xxxlarge + $space-medium) $space-medium $space-medium;
}

.demo-examples {
  margin: 0 0 $space-small;
  flex();
  align-items: flex-start;

  > * + * {
    margin-left: $space-xsmall
  }
}

.demo-home__title {
  padding: 0 !important;
  border: 0 !important;

  & + & {
    margin-top: $space-xsmall;
  }
}

.demo-home__link {
  text-decoration: none;
}

.demo-footer {
  outline: 2px solid $gray-light;
  bg(lighten($gray-light, 30));
  color: $gray;

  a {
    color: inherit;
    text-decoration: none;

    &:hover,
    a:active,
    a:focus {
      text-decoration: none;
    }
  }
}
