extends _layout

block content
  .demo-examples(style = "max-width: 280px")
    input.ui-input(
      placeholder="Username"
    )

  h2 Validation states

  .demo-examples(style = "max-width: 280px")
    input.ui-input.ui-input--valid(
      placeholder="Username"
      value="John"
    )

  .demo-examples(style = "max-width: 280px")
    input.ui-input.ui-input--invalid(
      placeholder="Username"
      value="John"
    )

  h3 Size variations

  .demo-examples(style = "max-width: 280px")
    input.ui-input.ui-input--small(
      placeholder="Username"
    )

  .demo-examples(style = "max-width: 280px")
    input.ui-input(
      placeholder="Username"
    )

  .demo-examples(style = "max-width: 280px")
    input.ui-input.ui-input--large(
      placeholder="Username"
    )
