block vars
  - var tilte = ''
  - var css = ''

doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible", content="ie=edge")

    meta(name="description", content="")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel="stylesheet", href="main.css")

    title Demo #{title}

    if slug
      link(rel="stylesheet", href=slug + ".css")

  body
    .demo-header
      .demo-header__inner
        a.demo-header__title(href="base.html") Orbit UI
        a.demo-header__link(href="base.html", class = slug === 'base' ? 'active' : '') Base
        a.demo-header__link(href="buttons.html", class = slug === 'buttons' ? 'active' : '') Buttons
    .demo-content
      .demo-container
        block content
