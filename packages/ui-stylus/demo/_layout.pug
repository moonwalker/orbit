doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible", content="ie=edge")

    meta(name="description", content="")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel="stylesheet", href="styles/main.css")

    title Demo - #{currentPage.title}
  body
    .demo-header
      button.demo-header__menu.ui-button-icon(type="button")
        i.ui-icon menu
      h1.demo-header__title
        a.demo-header__title__link(href="index.html") Orbit UI

    .demo-side-nav
      each page in pages.slice(1)
        a.demo-side-nav__link(
          href= page.slug + ".html",
            class= page.slug === currentPage.slug ? "active" : ""
          )= page.title

    .demo-content
      .demo-content__container.demo-container
        h1.demo-title= currentPage.title
        block content

    .demo-footer
      .demo-container
        a(href=repository)= `v ${version}`

    script.
      var sideNavElm = document.querySelector('.demo-side-nav');
      var menuBtnElm = document.querySelector('.demo-header__menu');

      menuBtnElm.addEventListener('click', function () {
        sideNavElm.classList.toggle('visible');
      });
