doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible", content="ie=edge")

    meta(name="description", content="")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel="stylesheet", href="styles/main.css")

    title Demo - #{currentPage.title}
  body
    .demo-header
      .demo-header__inner
        a.demo-header__title(href="base.html") Orbit UI

        each page in pages
          a.demo-header__link(
            href= page.slug + ".html",
            class= page.slug === currentPage.slug ? "active" : ""
          )= page.title

    .demo-content
      .demo-container
        h1.demo-title= currentPage.title
        block content
