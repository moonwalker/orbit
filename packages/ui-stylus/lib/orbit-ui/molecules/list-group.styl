$component-name = 'list-group';

@require '../_variables';
@import '../_selectors';

/*!
 * List group
 */
+root() {
  border: 1px solid $muted-color;
  list-style: none;
  padding: 0;

  // block vertical spacing
  margin: $space-medium 0;

  &:first-child {
    margin-top: 0;
  }

  &:last-child {
    margin-bottom: 0;
  }
}

+element('item') {
  margin: 0;
  border-top: 1px solid $muted-color;
  block();

  /*! stylelint-disable declaration-block-no-duplicate-properties */
  inner-space($space-small);
  padding-top: @padding-top - 1px;
  /*! stylelint-enable declaration-block-no-duplicate-properties */

  &:first-child {
    border-top: 0;
  }

  &:last-child {
    padding-bottom: @padding-bottom - 1px;
  }
}

/*!
 * Size variation
 */
+modifier('small') {
  type-scale(small);
}

+modifier('large') {
  type-scale(large);
}
