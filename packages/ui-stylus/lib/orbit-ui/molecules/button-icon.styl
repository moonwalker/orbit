$component-name = 'button-icon';

@require '../_variables';
@import '../_selectors';

/*!
 * Button icon
 *******************************************************************************/

+root() {
  flex();
  align-items: center;
  border: 0;
  inner-space($space-xxsmall);

  background-color: transparent;
  color: $gray-light;
  text-align: center;
  text-decoration: none;
  vertical-align: middle;
  white-space: nowrap;

  cursor: pointer;
  outline: none;
  transition: $state-transition-out if $state-transition-out;

  &:hover {
    color: $gray;
    transition: $state-transition-in if $state-transition-in;
  }
}

/*!
 * Kind variation
 *-----------------------------------------------------------------------------*/

+modifier('primary') {
  color: $primary-color;

  &:hover {
    color: $primary-dark-color;
  }
}

+modifier('secondary') {
  color: $secondary-color;

  &:hover {
    color: $secondary-dark-color;
  }
}

+modifier('success') {
  color: $success-color;

  &:hover {
    color: $success-dark-color;
  }
}

+modifier('info') {
  color: $info-color;

  &:hover {
    color: $info-dark-color;
  }
}

+modifier('warning') {
  color: $warning-color;

  &:hover {
    color: $warning-dark-color;
  }
}

+modifier('danger') {
  color: $danger-color;

  &:hover {
    color: $danger-dark-color;
  }
}

/*!
 * Size variation
 *-----------------------------------------------------------------------------*/

+modifier('xsmall') {
  inner-space($space-xxsmall / 2);
}

+modifier('small') {
  inner-space($space-xxsmall);
}

+modifier('large') {
  inner-space($space-xxsmall);
}

+modifier('xlarge') {
  inner-space($space-medium);
}
