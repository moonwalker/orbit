@require '../_variables';

/*!
 * Button
 *******************************************************************************/

.ui-button {
  inline-flex();
  align-items: center;
  border: 0;
  inner-space($space-xxsmall $space-medium);

  background-color: $gray;
  color: $light;
  line-height: $line-height;
  justify-content: center;
  text-align: center;
  text-decoration: none;
  vertical-align: middle;
  white-space: nowrap;

  cursor: pointer;

  &:hover {
    background-color: lighten(@background-color, 5);
    color: $light;
    text-decoration: none;
  }
}

.ui-button__content {
  margin-top: 0;
  margin-right: $space-xsmall;
  margin-bottom: 0;
  margin-left: @margin-right;

  // Collapse margins in between
  & + .ui-button__content {
    margin-left: 0;
  }

  &:first-child {
    margin-left: 0;
  }

  &:last-child {
    margin-right: 0;
  }
}

/*!
 * Kind variation
 *-----------------------------------------------------------------------------*/

.ui-button--primary {
  background-color: $primary-color;

  &:hover {
    background-color: lighten(@background-color, 5);
  }
}

.ui-button--secondary {
  background-color: $secondary-color;

  &:hover {
    background-color: lighten(@background-color, 5);
  }
}

.ui-button--success {
  background-color: $success-color;

  &:hover {
    background-color: lighten(@background-color, 5);
  }
}

.ui-button--info {
  background-color: $info-color;

  &:hover {
    background-color: lighten(@background-color, 5);
  }
}

.ui-button--warning {
  background-color: $warning-color;

  &:hover {
    background-color: lighten(@background-color, 5);
  }
}

.ui-button--danger {
  background-color: $danger-color;

  &:hover {
    background-color: lighten(@background-color, 5);
  }
}

/*!
 * Clear variation
 *-----------------------------------------------------------------------------*/
.ui-button--clear {
  background-color: transparent;
  color: $gray-light;

  &:hover {
    background-color: transparent;
    color: $gray-light;
    text-decoration: none;
  }
}

.ui-button--clear--primary {
  color: $primary-color;

  &:hover {
    color: lighten(@color, 5);
  }
}

.ui-button--clear--secondary {
  color: $secondary-color;

  &:hover {
    color: lighten(@color, 5);
  }
}

.ui-button--clear--success {
  color: $success-color;

  &:hover {
    color: lighten(@color, 5);
  }
}
.ui-button--clear--info {
  color: $info-color;

  &:hover {
    color: lighten(@color, 5);
  }
}
.ui-button--clear--warning {
  color: $warning-color;

  &:hover {
    color: lighten(@color, 5);
  }
}
.ui-button--clear--danger {
  color: $danger-color;

  &:hover {
    color: lighten(@color, 5);
  }
}


/*!
 * Size variation
 *-----------------------------------------------------------------------------*/

/*! XSmall */
.ui-button--xsmall {
  inner-space($space-xxxsmall $space-xsmall);
  type-scale(xsmall);
}

.ui-button__content--xsmall {
  margin-right: $space-xxsmall;
  margin-left: @margin-right;
}

/*! Small */
.ui-button--small {
  inner-space($space-xxsmall $space-small);
  type-scale(small);
}

.ui-button__content--small {
  margin-right: $space-xxsmall;
  margin-left: @margin-right;
}

/*! Large */
.ui-button--large {
  inner-space($space-small $space-large);
  type-scale(large);
}

.ui-button__content--large {
  margin-right: $space-small;
  margin-left: @margin-right;
}

/*! XLarge */
.ui-button--xlarge {
  inner-space($space-medium $space-xlarge);
  type-scale(xlarge);
}

.ui-button__content--xlarge {
  margin-right: $space-medium;
  margin-left: @margin-right;
}
