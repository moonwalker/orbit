$component-name = 'button';

@require '../_variables';
@import '../_selectors';

/*!
 * Button
 *******************************************************************************/

+root() {
  inline-flex();
  align-items: center;
  border: 0;
  inner-space($space-xxsmall $space-medium);

  background-color: $gray-light;
  color: $light;
  line-height: $line-height;
  justify-content: center;
  text-align: center;
  text-decoration: none;
  vertical-align: middle;
  white-space: nowrap;

  cursor: pointer;
  transition: $state-transition-out if $state-transition-out;

  &:hover {
    background-color: $gray;
    color: $light;
    text-decoration: none;

    transition: $state-transition-in if $state-transition-in;
  }
}

+element('content') {
  margin-top: 0;
  margin-right: $space-xsmall;
  margin-bottom: 0;
  margin-left: @margin-right;

  // Collapse margins in between
  & + & {
    margin-left: 0;
  }

  &:first-child {
    margin-left: 0;
  }

  &:last-child {
    margin-right: 0;
  }
}

/*!
 * Kind modifier
 *-----------------------------------------------------------------------------*/

+modifier('primary') {
  background-color: $primary-color;

  &:hover {
    background-color: $primary-dark-color;
  }
}

+modifier('secondary') {
  background-color: $secondary-color;

  &:hover {
    background-color: $secondary-dark-color;
  }
}

+modifier('success') {
  background-color: $success-color;

  &:hover {
    background-color: $success-dark-color;
  }
}

+modifier('info') {
  background-color: $info-color;

  &:hover {
    background-color: $info-dark-color;
  }
}

+modifier('warning') {
  background-color: $warning-color;

  &:hover {
    background-color: $warning-dark-color;
  }
}

+modifier('danger') {
  background-color: $danger-color;

  &:hover {
    background-color: $danger-dark-color;
  }
}

/*!
 * Clear modifier
 *-----------------------------------------------------------------------------*/

+modifier('clear') {
  background-color: transparent;
  color: $gray-light;

  &:hover {
    background-color: transparent;
    color: $gray;
    text-decoration: none;
  }
}

+modifier('clear--primary') {
  color: $primary-color;

  &:hover {
    color: $primary-dark-color;
  }
}

+modifier('clear--secondary') {
  color: $secondary-color;

  &:hover {
    color: $secondary-dark-color;
  }
}

+modifier('clear--success') {
  color: $success-color;

  &:hover {
    color: $success-dark-color;
  }
}

+modifier('clear--info') {
  color: $info-color;

  &:hover {
    color: $info-dark-color;
  }
}

+modifier('clear--warning') {
  color: $warning-color;

  &:hover {
    color: $warning-dark-color;
  }
}

+modifier('clear--danger') {
  color: $danger-color;

  &:hover {
    color: $danger-dark-color;
  }
}

/*!
 * Size modifier
 *-----------------------------------------------------------------------------*/

/*! XSmall */
+modifier('xsmall') {
  inner-space($space-xxxsmall $space-xsmall);
  type-scale(xsmall);
}

+element('content--xsmall') {
  margin-right: $space-xxsmall;
  margin-left: @margin-right;
}

/*! Small */
+modifier('small') {
  inner-space($space-xxsmall $space-small);
  type-scale(small);
}

+element('content--small') {
  margin-right: $space-xxsmall;
  margin-left: @margin-right;
}

/*! Large */
+modifier('large') {
  inner-space($space-small $space-large);
  type-scale(large);
}

+element('content--large') {
  margin-right: $space-small;
  margin-left: @margin-right;
}

/*! XLarge */
+modifier('xlarge') {
  inner-space($space-medium $space-xlarge);
  type-scale(xlarge);
}

+element('content--xlarge') {
  margin-right: $space-medium;
  margin-left: @margin-right;
}
