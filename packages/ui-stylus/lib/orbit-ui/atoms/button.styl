@require '../_variables';

/*!
 * Button
 */

.ui-button {
  flex();
  align-items: center;
  border: 0;
  padding: $space-xxsmall $space-small;

  background: $primary-color;
  color: $light;
  line-height: $line-height;
  text-align: center;
  text-decoration: none;
  vertical-align: middle;
  white-space: nowrap;

  cursor: pointer;

  &:hover {
    background: lighten($primary-color, 10);
    color: $light;
    text-decoration: none;
  }
}

.ui-button__content {
  margin: 0 $space-xxsmall;

  // Collapse margins in between
  & + & {
    margin-left: 0;
  }

  &:first-child {
    margin-left: 0;
  }

  &:last-child {
    margin-right: 0;
  }
}

/*!
 * Kind variation
 */
.ui-button--primary {
  background: $primary-color;

  &:hover {
    background: lighten($primary-color, 10);
  }
}

.ui-button--secondary {
  background: $secondary-color;

  &:hover {
    background: lighten($secondary-color, 10);
  }
}

.ui-button--success {
  background: $success-color;

  &:hover {
    background: lighten($success-color, 10);
  }
}

.ui-button--info {
  background: $info-color;

  &:hover {
    background: lighten($info-color, 10);
  }
}

.ui-button--warning {
  background: $warning-color;

  &:hover {
    background: lighten($warning-color, 10);
  }
}

.ui-button--danger {
  background: $danger-color;

  &:hover {
    background: lighten($danger-color, 10);
  }
}

/*!
 * Size variation
 */
.ui-button--xsmall {
  padding: $space-xxxsmall $space-xxsmall;
  type-scale(xsmall);
}

.ui-button__content--xsmall {
  margin: 0 $space-xxxsmall;
}

.ui-button--small {
  padding: $space-xxsmall $space-xsmall;
  type-scale(small);
}

.ui-button__content--small {
  margin: 0 $space-xxxsmall;
}

.ui-button--large {
  padding: $space-small $space-medium;
  type-scale(large);
}

.ui-button__content--large {
  margin: 0 $space-xsmall;
}

.ui-button--xlarge {
  padding: $space-medium $space-large;
  type-scale(xlarge);
}

.ui-button__content--xlarge {
  margin: 0 $space-small;
}
