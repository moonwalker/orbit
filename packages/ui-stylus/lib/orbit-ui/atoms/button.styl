  }
}

+modifier('clear--danger') {
  color: $danger-color;

  &:hover {
    color: $danger-dark-color;
  }
}

/*!
 * Outline modifier
 *-----------------------------------------------------------------------------*/

+modifier('outline') {
  border: 1px solid $gray;
  background-color: transparent;
  color: $gray;

  &:hover {
    background-color: transparent;
    color: $gray-dark;
    text-decoration: none;
  }
}

+modifier('outline--xsmall') {
  inner-space($space-xxxsmall $space-xsmall, 1px);
}

+modifier('outline--small') {
  inner-space($space-xxsmall $space-small, 1px);
}

+modifier('outline--medium') {
  inner-space($space-xxsmall $space-medium, 1px);
}

+modifier('outline--large') {
  inner-space($space-small $space-large, 1px);
}

+modifier('outline--xlarge') {
  inner-space($space-medium $space-xlarge, 1px);
}

+modifier('outline--primary') {
  border-color: $primary-color;
  color: $primary-color;

  &:hover {
    color: $primary-dark-color;
  }
}

+modifier('outline--secondary') {
