  color: $info-color;

  &:hover {
    color: $info-dark-color;
  }
}

+modifier('outline--warning') {
  border-color: $warning-color;
  color: $warning-color;

  &:hover {
    color: $warning-dark-color;
  }
}

+modifier('outline--danger') {
  border-color: $danger-color;
  color: $danger-color;

  &:hover {
    color: $danger-dark-color;
  }
}

/*!
 * Inline modifier
 *-----------------------------------------------------------------------------*/

+modifier('inline') {
  padding: 0;
  background-color: transparent;
  color: inherit;
  font-weight: inherit;

  &:hover {
    background-color: transparent;
    color: inherit;
    text-decoration: underline;
  }
}

+modifier('inline--primary') {
  color: $primary-color;

  &:hover {
