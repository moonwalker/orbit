  }
}

+modifier('danger') {
  background-color: $danger-color;

  &:hover {
    background-color: $danger-dark-color;
  }
}

/*!
 * Clear modifier
 *-----------------------------------------------------------------------------*/

+modifier('clear') {
  background-color: transparent;
  color: $gray-light;

  &:hover {
    background-color: transparent;
    color: $gray;
    text-decoration: none;
  }
}

+modifier('clear--primary') {
  color: $primary-color;

  &:hover {
    color: $primary-dark-color;
  }
}

+modifier('clear--secondary') {
  color: $secondary-color;

  &:hover {
    color: $secondary-dark-color;
  }
}

+modifier('clear--success') {
  color: $success-color;

