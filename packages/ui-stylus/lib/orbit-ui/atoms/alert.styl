$component-name = 'alert';

@require '../_variables';
@import '../_selectors';

/*!
 * Badge
 *******************************************************************************/
+root() {
  block();
  inner-space($space-small);
  bg($gray)
  color: $light;
}

/*!
 * Kind modifier
 *-----------------------------------------------------------------------------*/

+modifier('success') {
  bg($success-color);
}
+modifier('info') {
  bg($info-color);
}
+modifier('warning') {
  bg($warning-color);
}
+modifier('danger') {
  bg($danger-color);
}

/*!
 * Outline modifier
 *-----------------------------------------------------------------------------*/
+modifier('outline') {
  bg();
  border: 1px solid $gray;
  inner-space($space-small, 1px);
  color: inherit;
}

+modifier('outline--success') {
  border-color: $success-color;
  color: $success-color;
}

+modifier('outline--info') {
  border-color: $info-color;
  color: $info-color;
}

+modifier('outline--warning') {
  border-color: $warning-color;
  color: $warning-color;
}

+modifier('outline--danger') {
  border-color: $danger-color;
  color: $danger-color;
}

+modifier('outline--small') {
  inner-space($space-xsmall, 1px);
}

+modifier('outline--large') {
  inner-space($space-medium, 1px);
}

/*!
 * Size modifier
 *-----------------------------------------------------------------------------*/

/*! Small */
+modifier('small') {
  type-scale(small);
}

/*! Large */
+modifier('large') {
  inner-space($space-medium, 1px);
}
