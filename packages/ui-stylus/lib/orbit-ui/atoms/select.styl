$component-name = 'select';

@require '../_variables';
@import '../_selectors';

/*
 * Select
 */

+root() {
  appearance: none;
  border: 1px solid $muted-color;
  border-radius: 0;
  padding: scalc('%s - %s', $space-xsmall, 1px);
  bg($light);
  color: $muted-color;
  width: 100%;
  type-scale(medium);
  outline: none;

  // Placheolder
  +placeholder() {
    color: rgba(@color, 0.6);
  }

  &:focus {
    border-color: $gray;
    color: $body-color;
  }
}

/*!
 * States
 */

/*!
 * Valid state
 */
+modifier('valid') {
  border-color: $success-color;
}

/*!
 * Invalid state
 */
+modifier('invalid') {
  border-color: $danger-color;
}

/*!
 * Size variations
 */
+modifier('small') {
  padding: scalc('%s - %s', $space-xxsmall, 1px);
  type-scale(small);
}

+modifier('large') {
  padding: scalc('%s - %s', $space-small, 1px);
  type-scale(large);
}
