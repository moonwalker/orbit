$component-name = 'input';

@require '../_variables';
@import '../_selectors';

/*!
 * Input
 */
+root() {
  border: 1px solid $muted-color;
  border-radius: 0;
  inner-space($space-xsmall, 1px);
  color: $muted-color;
  width: 100%;
  type-scale(medium);

  transition: $state-transition-out if $state-transition-out;
  appearance: none;
  outline: none;

  // Placheolder
  +placeholder() {
    color: $muted-color;
  }

  // Focus state
  &:focus {
    border-color: $neutral-500;
    color: $body-color;
    transition: $state-transition-in if $state-transition-in;
  }
}

/*!
 * Valid state
 */
+state('valid') {
  border-color: $success-color;
  transition: $state-transition-in if $state-transition-in;
}

/*!
 * Invalid state
 */
+state('invalid') {
  border-color: $danger-color;
  transition: $state-transition-in if $state-transition-in;
}

/*!
 * Size variations
 */
+modifier('small') {
  inner-space($space-xxsmall, 1px)
  type-scale(small);
}

+modifier('large') {
  inner-space($space-small, 1px)
  type-scale(large);
}
