@require '../_variables';

/*!
 * Input
 */
.ui-input {
  border: 1px solid $muted-color;
  inner-space($space-xsmall, 1px);
  color: $muted-color;
  width: 100%;
  type-scale(medium);
  outline: none;

  // Placheolder
  +placeholder() {
    color: rgba(@color, 0.6);
  }
}

/*!
 * States
 */

/*!
 * Focus state
 */
.ui-input:focus {
  border-color: $gray;
  color: $body-color;
}

/*!
 * Valid state
 */
.ui-input--valid {
  border-color: $success-color;
}

/*!
 * Invalid state
 */
.ui-input--invalid {
  border-color: $danger-color;
}

/*!
 * Size variations
 */
.ui-input--small {
  inner-space($space-xxsmall, 1px)
  type-scale(small);
}
.ui-input--large {
  inner-space($space-small, 1px)
  type-scale(large);
}
