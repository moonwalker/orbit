$component-name = 'input';

@require '../_variables';
@import '../_selectors';

/*!
 * Input
 */
+root() {
  border: 1px solid $muted-color;
  inner-space($space-xsmall, 1px);
  color: $muted-color;
  width: 100%;
  type-scale(medium);
  outline: none;

  // Placheolder
  +placeholder() {
    color: rgba(@color, 0.6);
  }

  // Focus state
  &:focus {
    border-color: $gray;
    color: $body-color;
  }
}

/*!
 * Valid state
 */
+modifier('valid') {
  border-color: $success-color;
}

/*!
 * Invalid state
 */
+modifier('invalid') {
  border-color: $danger-color;
}

/*!
 * Size variations
 */
+modifier('small') {
  inner-space($space-xxsmall, 1px)
  type-scale(small);
}

+modifier('large') {
  inner-space($space-small, 1px)
  type-scale(large);
}
