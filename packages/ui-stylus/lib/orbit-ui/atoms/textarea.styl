@require '../_variables';

/*!
 * Input
 */
.ui-textarea {
  border: 1px solid $muted-color;
  padding: scalc('%s - %s', $space-xsmall, 1px);
  color: $muted-color;
  width: 100%;
  type-scale(medium);
  outline: none;

  // Placheolder
  +placeholder() {
    color: rgba(@color, 0.6);
  }
}

/*!
 * States
 */

/*!
 * Focus state
 */
.ui-textarea:focus {
  border-color: $gray;
  color: $body-color;
}

/*!
 * Valid state
 */
.ui-textarea--valid {
  border-color: $success-color;
}

/*!
 * Invalid state
 */
.ui-textarea--invalid {
  border-color: $danger-color;
}

/*!
 * Size variations
 */
.ui-textarea--small {
  padding: scalc('%s - %s', $space-xxsmall, 1px);
  type-scale(small);
}
.ui-textarea--large {
  padding: scalc('%s - %s', $space-small, 1px);
  type-scale(large);
}
