$component-name = 'textarea';

@require '../_variables';
@import '../_selectors';

/*!
 * Input
 */
+root() {
  border: 1px solid $muted-color;
  padding: scalc('%s - %s', $space-xsmall, 1px);
  color: $muted-color;
  width: 100%;
  type-scale(medium);

  transition: $state-transition-out if $state-transition-out;
  outline: none;

  // Placheolder
  +placeholder() {
    color: rgba(@color, 0.6);
  }

  &:focus {
    border-color: $gray;
    color: $body-color;
    transition: $state-transition-in if $state-transition-in;
  }
}

/*!
 * States
 */

/*!
 * Valid state
 */
+modifier('valid') {
  border-color: $success-color;
  transition: $state-transition-in if $state-transition-in;
}

/*!
 * Invalid state
 */
+modifier('invalid') {
  border-color: $danger-color;
  transition: $state-transition-in if $state-transition-in;
}

/*!
 * Size variations
 */
+modifier('small') {
  padding: scalc('%s - %s', $space-xxsmall, 1px);
  type-scale(small);
}
+modifier('large') {
  padding: scalc('%s - %s', $space-small, 1px);
  type-scale(large);
}
