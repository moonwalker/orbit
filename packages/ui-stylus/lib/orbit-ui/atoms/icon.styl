@require '../_variables';
@require '../_imports';

/*!
 * Icon
 *
 * Based on https://github.com/google/material-design-icons/blob/master/iconfont/material-icons.css
 */

.ui-icon {
  inline-block($space-medium, $space-medium);
  font-family: 'Material Icons';
  font-weight: normal;
  font-style: normal;
  font-size: $space-medium;
  line-height: 1;
  text-transform: none;
  letter-spacing: normal;
  word-wrap: normal;
  white-space: nowrap;
  direction: ltr;

  /* Support for all WebKit browsers. */
  -webkit-font-smoothing: antialiased;
  /* Support for Safari and Chrome. */
  text-rendering: optimizeLegibility;

  /* Support for Firefox. */
  -moz-osx-font-smoothing: grayscale;

  /* Support for IE. */
  font-feature-settings: 'liga';
}

/*!
 * Size variations
 */

.ui-icon--small {
  box($space-small, $space-small);
  font-size: $space-small;
}

.ui-icon--large {
  box($space-large, $space-large);
  font-size: $space-large;
}
