$componentName = 'icon';

@require '../_variables';
@require '../_imports';
@import '../_selectors';

/*!
 * Icon
 *
 * Based on https://github.com/google/material-design-icons/blob/master/iconfont/material-icons.css
 */

+root() {
  inline-block($space-medium, $space-medium);
  font-family: 'Material Icons';
  font-weight: normal;
  font-style: normal;
  font-size: $space-medium;
  line-height: 1;
  text-transform: none;
  letter-spacing: normal;
  word-wrap: normal;
  white-space: nowrap;
  direction: ltr;
  vertical-align: middle;
  overflow: hidden;

  /* Support for all WebKit browsers. */
  -webkit-font-smoothing: antialiased;
  /* Support for Safari and Chrome. */
  text-rendering: optimizeLegibility;

  /* Support for Firefox. */
  -moz-osx-font-smoothing: grayscale;

  /* Support for IE. */
  font-feature-settings: 'liga';
}

/*!
 * Size modifers
 */

+modifier('xsmall') {
  box($space-xsmall, $space-xsmall);
  font-size: $space-xsmall;
}

+modifier('small') {
  box($space-small, $space-small);
  font-size: $space-small;
}

+modifier('large') {
  box($space-large, $space-large);
  font-size: $space-large;
}

+modifier('xlarge') {
  box($space-xlarge, $space-xlarge);
  font-size: $space-xlarge;
}
