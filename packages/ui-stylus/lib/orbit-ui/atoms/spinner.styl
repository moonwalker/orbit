$component-name = 'spinner';

@require '../_variables';
@import '../_selectors';

$spinner-animation-name = unquote($selector-prefix + $component-name + '-rotate');

@keyframes $spinner-animation-name {
  0% {
    transform: rotate(0);
  }

  50% {
    transform: rotate(180deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

+root() {
  inline-block($space-medium, $space-medium);
  relative();
  color: $gray-light;

  &::before {
    box-sizing: border-box;
    block(cover);
    absolute(cover);
    overflow: hidden;
    will-change: transform;

    border-radius: 50%;
    border: 3px solid currentColor;
    border-top-color: transparent;
    animation: $spinner-animation-name .6s both linear infinite;
  }
}

/*!
 * Size variations
 */
+modifier('small') {
  box($space-small, $space-small);

  &::before {
    border-width: 2px;
  }
}

+modifier('large') {
  box($space-large, $space-large);
}
