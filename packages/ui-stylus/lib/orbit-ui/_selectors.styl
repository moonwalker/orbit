// Css modules selector generation
css-modules-root() {
  .root {
    {block}
  }
}

css-modules-state($state-name) {
  .{$state-name} {
    {block}
  }
}

css-modules-modifier($modifier-name) {
  .{$modifier-name} {
    {block}
  }
}

css-modules-element($element-name) {
  .{$element-name} {
    {block}
  }
}

// BEM selectors generator
$component-selector = '.' + $selector-prefix + $component-name;

bem-root() {
  {$component-selector} {
    {block}
  }
}

bem-state($state-name) {
  {$component-selector}--{$state-name} {
    {block}
  }
}

bem-modifier($modifier-name) {
  {$component-selector}--{$modifier-name} {
    {block}
  }
}

bem-element($element-name) {
  {$component-selector}__{$element-name} {
    {block}
  }
}

if ($bem-selectors) {
  root = bem-root;
  state = bem-state;
  modifier = bem-modifier;
  element = bem-element;
} else {
  root = css-modules-root;
  state = css-modules-state;
  modifier = css-modules-modifier;
  element = css-modules-element;
}
