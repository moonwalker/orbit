@require '../_variables';

html {
  font-size: percentage($font-size / 16);
}

body {
  font-family: $font-family;
  line-height: unit($line-height / $font-size, '');
  color: $body-color;
}

// Headers
// -----------------------------------------------------------------------------
h1,
h2,
h3,
h4,
h5 {
  margin: $space-medium 0 $space-xsmall;
  color: $header-color;
}

h1 {
  type-scale(xxxlarge);
}

h2 {
  type-scale(xxlarge);
}

h3 {
  type-scale(xlarge);
}

h4 {
  type-scale(large);
}

h5 {
  type-scale(medium);
}

h6 {
  type-scale(small);
}

p {
  margin: $space-xsmall 0 $space-medium;
}

h1, h2, h3, h4, h5, p {
  &:first-child {
    margin-top: 0;
  }
  &:last-child {
    margin-bottom: 0;
  }
}

// Links
// -----------------------------------------------------------------------------
a {
  color: $link-color;

  &:hover {
    color: $link-color-hover;
  }
}

// Blocks
// -----------------------------------------------------------------------------
ul,
ol {
  margin: $space-xsmall 0 $space-medium;
  padding-left: $space-medium;

  &:last-child {
    margin-bottom: 0;
  }
}

dl {
  margin: $space-xsmall 0 $space-medium;
}

blockquote {
  margin: $space-xsmall 0 $space-medium;
  padding-left: $space-medium;
}
