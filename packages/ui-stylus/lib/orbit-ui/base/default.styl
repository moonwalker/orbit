@require '../_variables';

/*! stylelint-disable no-duplicate-selectors */
html {
  font-size: percentage($font-size / 16);
}

body {
  font-family: $font-family;
  line-height: unit($line-height / $font-size, '');
  color: $body-color;
}

// Headers
// -----------------------------------------------------------------------------
h1,
h2,
h3,
h4,
h5 {
  color: $header-color;
}

h1 {
  type-scale(xxxlarge);
}

h2 {
  type-scale(xxlarge);
}

h3 {
  type-scale(xlarge);
}

h4 {
  type-scale(large);
}

h5 {
  type-scale(medium);
}

h6 {
  type-scale(small);
}

// Links
// -----------------------------------------------------------------------------
a {
  color: $link-color;

  &:hover {
    color: $link-color-hover;
  }
}

// Blocks
// -----------------------------------------------------------------------------
ul,
ol {
  padding-left: $space-medium;

  &:last-child {
    margin-bottom: 0;
  }
}

blockquote {
  margin: 0;
  padding-left: $space-medium;
}

// Vertical spacing
// -----------------------------------------------------------------------------

p,
ul,
ol,
dl {
  margin: $space-medium 0;

  &:first-child {
    margin-top: 0;
  }
  &:last-child {
    margin-bottom: 0;
  }
}

h1, h2, h3, h4, h5, h6 {
  margin: $space-large 0 $space-xxsmall;

  &:first-child {
    margin-top: 0;
  }

  &:last-child {
    margin-bottom: 0;
  }

  & + {
    p, ul, ol, dl {
      margin-top: $space-xxxsmall;
    }
  }
}


/*! stylelint-enable no-duplicate-selectors */
