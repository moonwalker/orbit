.root {
  background-color: blue;

  &[data-orientation='horizontal'] {
    height: 1px;
    width: 100%;
  }

  &[data-orientation='vertical'] {
    height: 100%;
    width: 1px;
  }
}

.containerHeight {
  height: 20px;
}

.containerWidth {
  width: 300px;

  span {
    white-space: nowrap;
    margin: 0 10px;
  }
}

.custom {
  background-color: magenta;

  &[data-orientation='horizontal'] {
    height: 5px;
    width: 100%;
  }

  &[data-orientation='vertical'] {
    height: 100%;
    width: 5px;
  }
}